---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const year = new Date().getFullYear();
---

<footer class="bg-slate-900 text-slate-400 mt-auto">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div>
        <a href={`/${lang}/`} class="flex items-center gap-2 text-white font-bold text-lg mb-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          Digital Runners
        </a>
        <p class="text-sm">{t('footer.tagline')}</p>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-white font-semibold mb-3 text-sm uppercase tracking-wider">Navigation</h3>
        <ul class="space-y-2 text-sm">
          <li><a href={`/${lang}/leistungen`} class="hover:text-cyan-400 transition-colors">{t('nav.services')}</a></li>
          <li><a href={`/${lang}/ueber-uns`} class="hover:text-cyan-400 transition-colors">{t('nav.about')}</a></li>
          <li><a href={`/${lang}/referenzen`} class="hover:text-cyan-400 transition-colors">{t('nav.portfolio')}</a></li>
          <li><a href={`/${lang}/blog`} class="hover:text-cyan-400 transition-colors">{t('nav.blog')}</a></li>
          <li><a href={`/${lang}/kontakt`} class="hover:text-cyan-400 transition-colors">{t('nav.contact')}</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-white font-semibold mb-3 text-sm uppercase tracking-wider">Kontakt</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="mailto:info@digital-runners.ch" class="hover:text-cyan-400 transition-colors">
              info@digital-runners.ch
            </a>
          </li>
          <li>
            <a href={`/${lang}/kontakt`} class="hover:text-cyan-400 transition-colors">
              {t('nav.contact')}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t border-slate-800 mt-8 pt-8 flex flex-col sm:flex-row items-center justify-between gap-4 text-sm">
      <p>© {year} Digital Runners – {t('footer.rights')}</p>
      <div class="flex gap-4">
        <a href={`/${lang}/datenschutz`} class="hover:text-cyan-400 transition-colors">{t('footer.privacy')}</a>
        <a href={`/${lang}/impressum`} class="hover:text-cyan-400 transition-colors">{t('footer.imprint')}</a>
      </div>
    </div>
  </div>
</footer>
