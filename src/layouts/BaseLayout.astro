---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import type { Lang } from '../i18n/utils';

interface Props {
  title: string;
  description: string;
  lang: Lang;
  ogImage?: string;
  alternatePath?: string;
}

const { title, description, lang, ogImage, alternatePath } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site ?? 'https://digital-runners.ch');
const otherLang = lang === 'de' ? 'en' : 'de';
const otherPath = alternatePath ?? Astro.url.pathname.replace(`/${lang}`, `/${otherLang}`);
---

<!doctype html>
<html lang={lang} class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <link
      rel="alternate"
      hreflang={otherLang}
      href={new URL(otherPath, canonicalUrl.origin)}
    />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin=""
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Digital Runners</title>
  </head>
  <body class="flex flex-col min-h-full bg-white text-slate-800">
    <Header lang={lang} alternatePath={alternatePath} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>
