---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import { useTranslations } from '../../i18n/utils';

const lang = 'en' as const;
const t = useTranslations(lang);

const testimonials = [
  {
    quote: 'Digital Runners delivered a first-class UniFi solution for us. The support and service were excellent.',
    author: 'M. Steiner',
    role: 'Managing Director',
  },
  {
    quote: 'Choosing Digital Runners was the best decision we made. Their expertise is unmatched and they found the perfect solution for us.',
    author: 'Johannes H.',
    role: 'IT Manager',
  },
];

const industries = [
  { icon: 'üè•', label: 'Healthcare' },
  { icon: 'üè®', label: 'Hospitality' },
  { icon: '‚öñÔ∏è', label: 'Law Firms' },
  { icon: 'üè¢', label: 'Offices' },
  { icon: 'üè≠', label: 'Warehousing & Logistics' },
  { icon: 'üèõÔ∏è', label: 'Museums' },
  { icon: 'üîß', label: 'Workshops' },
  { icon: '‚úÇÔ∏è', label: 'Salons' },
];
---

<BaseLayout
  lang={lang}
  title="Home"
  description="Digital Runners ‚Äì Your Swiss UniFi Partner for professional network solutions, UniFi Network and UniFi Protect."
>
  <Hero lang={lang} />

  <!-- Services overview -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-14">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">{t('services.title')}</h2>
        <p class="text-slate-600 max-w-2xl mx-auto">{t('services.subtitle')}</p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {[
          { icon: 'üåê', title: t('services.network.title'), desc: t('services.network.desc') },
          { icon: 'üìπ', title: t('services.protect.title'), desc: t('services.protect.desc') },
          { icon: 'üîß', title: t('services.install.title'), desc: t('services.install.desc') },
          { icon: 'üõü', title: t('services.support.title'), desc: t('services.support.desc') },
        ].map(service => (
          <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow border border-slate-100">
            <div class="text-3xl mb-4">{service.icon}</div>
            <h3 class="font-semibold text-slate-900 mb-2">{service.title}</h3>
            <p class="text-sm text-slate-600 leading-relaxed">{service.desc}</p>
          </div>
        ))}
      </div>
      <div class="text-center mt-10">
        <a href="/en/leistungen" class="inline-flex items-center gap-2 text-cyan-600 font-semibold hover:text-cyan-700 transition-colors">
          View all services
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Industries -->
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">{t('portfolio.title')}</h2>
        <p class="text-slate-600 max-w-2xl mx-auto">{t('portfolio.subtitle')}</p>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
        {industries.map(ind => (
          <div class="flex flex-col items-center gap-3 bg-slate-50 rounded-xl p-5 border border-slate-100 hover:border-cyan-300 transition-colors text-center">
            <span class="text-3xl">{ind.icon}</span>
            <span class="text-sm font-medium text-slate-700">{ind.label}</span>
          </div>
        ))}
      </div>
      <div class="text-center mt-10">
        <a href="/en/referenzen" class="inline-flex items-center gap-2 text-cyan-600 font-semibold hover:text-cyan-700 transition-colors">
          View all industries ‚Üí
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-slate-900 text-center mb-12">What our clients say</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {testimonials.map(item => (
          <div class="bg-white rounded-xl p-8 shadow-sm border border-slate-100">
            <svg class="h-8 w-8 text-cyan-400 mb-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
            <p class="text-slate-700 leading-relaxed mb-6 italic">"{item.quote}"</p>
            <div>
              <p class="font-semibold text-slate-900">{item.author}</p>
              <p class="text-sm text-slate-500">{item.role}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-cyan-500 py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-4">
        Ready for your professional UniFi network?
      </h2>
      <p class="text-slate-800 mb-8 max-w-xl mx-auto">
        Contact us for a no-obligation consultation. We will find the optimal solution for you.
      </p>
      <a href="/en/kontakt" class="inline-flex items-center gap-2 bg-slate-900 hover:bg-slate-700 text-white font-semibold px-8 py-4 rounded-lg transition-colors">
        {t('hero.cta')}
      </a>
    </div>
  </section>
</BaseLayout>
