---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';
import { industries } from '../../data/industries';

const lang = 'en' as const;
const t = useTranslations(lang);
---

<BaseLayout
  lang={lang}
  title={t('portfolio.title')}
  description="UniFi solutions for 10 industries: healthcare, hospitality, law firms, offices, warehousing & logistics, museums, workshops, salons, retail and education."
>
  <!-- Page header -->
  <div class="bg-gradient-to-br from-slate-900 to-blue-950 text-white py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-cyan-400 font-semibold text-sm uppercase tracking-widest mb-3">Digital Runners</p>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{t('portfolio.title')}</h1>
      <p class="text-slate-300 text-lg max-w-2xl">{t('portfolio.subtitle')}</p>
    </div>
  </div>

  <!-- Industries grid -->
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <p class="text-slate-600 max-w-2xl mx-auto text-lg">
          Digital Runners delivers tailored UniFi solutions for a wide range of industries.
          Select your industry to learn how we can help.
        </p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {industries.map((industry) => (
          <a
            href={`/en/industries/${industry.enSlug}`}
            class="group bg-white rounded-2xl p-8 shadow-sm border border-slate-100 hover:border-cyan-300 hover:shadow-md transition-all"
          >
            <div class="text-4xl mb-4">{industry.icon}</div>
            <h2 class="font-bold text-slate-900 text-lg mb-2 group-hover:text-cyan-600 transition-colors">
              {industry.en.name}
            </h2>
            <p class="text-slate-500 text-sm leading-relaxed line-clamp-2">
              {industry.en.subtitle}
            </p>
            <span class="inline-flex items-center gap-1 mt-4 text-cyan-600 text-sm font-medium group-hover:gap-2 transition-all">
              Learn more
              <i class="ci ci-Arrow_Right_MD text-sm"></i>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-bold text-slate-900 mb-4">Your industry isn't listed?</h2>
      <p class="text-slate-600 mb-8">No problem â€“ we find the right UniFi solution for special requirements too.</p>
      <a
        href="/en/kontakt"
        class="inline-flex items-center gap-2 bg-cyan-500 hover:bg-cyan-400 text-slate-900 font-semibold px-8 py-4 rounded-lg transition-colors"
      >
        {t('hero.cta')}
      </a>
    </div>
  </section>
</BaseLayout>
