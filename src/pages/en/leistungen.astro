---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';

const lang = 'en' as const;
const t = useTranslations(lang);

const services = [
  {
    icon: 'üåê',
    title: 'UniFi Network',
    desc: 'High-performance WiFi, switch and gateway infrastructure for reliable, scalable networks in any environment.',
    details: [
      'UniFi Access Points for maximum WiFi coverage',
      'Managed switches for structured cabling',
      'UniFi Cloud Gateways and Dream Machines',
      'Centralised management via UniFi Network Controller',
      'VPN, VLAN and advanced network segmentation',
    ],
  },
  {
    icon: 'üìπ',
    title: 'UniFi Protect',
    desc: 'Professional IP video surveillance with UniFi Protect ‚Äì cameras, NVR and centralised management from a single source.',
    details: [
      'IP cameras for indoor and outdoor applications',
      'UniFi NVR and Cloud Key for local recording',
      'Real-time monitoring and motion detection',
      'Easy management via UniFi Protect App',
      'Scalable from small offices to large facilities',
    ],
  },
  {
    icon: 'üîß',
    title: 'Installation & Consulting',
    desc: 'We analyse your requirements, plan the optimal solution and install your UniFi infrastructure professionally.',
    details: [
      'Site survey and requirements analysis',
      'Tailored network planning',
      'Professional mounting and cabling',
      'Configuration and commissioning',
      'Handover training and documentation',
    ],
  },
  {
    icon: 'üõü',
    title: 'Support & Maintenance',
    desc: 'Continuous support, proactive maintenance and fast assistance when problems arise ‚Äì so your network always runs smoothly.',
    details: [
      'Firmware updates and security patches',
      'Proactive monitoring of your infrastructure',
      'Fast troubleshooting when issues occur',
      'Regular performance reviews',
      'Phone and remote support',
    ],
  },
];
---

<BaseLayout
  lang={lang}
  title={t('services.title')}
  description="Our UniFi services: UniFi Network, UniFi Protect, installation, consulting, support and maintenance."
>
  <div class="bg-gradient-to-br from-slate-900 to-blue-950 text-white py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-cyan-400 font-semibold text-sm uppercase tracking-widest mb-3">Digital Runners</p>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{t('services.title')}</h1>
      <p class="text-slate-300 text-lg max-w-2xl">{t('services.subtitle')}</p>
    </div>
  </div>

  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 space-y-16">
      {services.map((service, i) => (
        <div class:list={['grid grid-cols-1 md:grid-cols-2 gap-10 items-center']}>
          <div class:list={[i % 2 !== 0 ? 'md:order-2' : '']}>
            <div class="text-5xl mb-4">{service.icon}</div>
            <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-4">{service.title}</h2>
            <p class="text-slate-600 leading-relaxed mb-6">{service.desc}</p>
            <a href="/en/kontakt" class="inline-flex items-center gap-2 text-cyan-600 font-semibold hover:text-cyan-700 transition-colors">
              Request a quote ‚Üí
            </a>
          </div>
          <div class:list={['bg-slate-50 rounded-2xl p-8 border border-slate-100', i % 2 !== 0 ? 'md:order-1' : '']}>
            <h3 class="font-semibold text-slate-800 mb-4">What we deliver:</h3>
            <ul class="space-y-3">
              {service.details.map(item => (
                <li class="flex items-start gap-3 text-sm text-slate-700">
                  <svg class="h-5 w-5 text-cyan-500 shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </section>

  <section class="bg-slate-900 text-white py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Interested? We are happy to advise you.</h2>
      <p class="text-slate-400 mb-8">Contact us for a no-obligation consultation.</p>
      <a href="/en/kontakt" class="inline-flex items-center gap-2 bg-cyan-500 hover:bg-cyan-400 text-slate-900 font-semibold px-8 py-4 rounded-lg transition-colors">
        Get in touch now
      </a>
    </div>
  </section>
</BaseLayout>
