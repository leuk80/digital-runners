---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { industries } from '../../../data/industries';
import type { Industry } from '../../../data/industries';

export function getStaticPaths() {
  return industries.map((industry) => ({
    params: { slug: industry.slug },
    props: { industry },
  }));
}

interface Props {
  industry: Industry;
}

const { industry } = Astro.props;
const c = industry.de;
---

<BaseLayout lang="de" title={c.title} description={c.metaDescription}>
  <!-- Hero -->
  <div class="bg-gradient-to-br from-slate-900 to-blue-950 text-white py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <a
        href="/de/referenzen"
        class="inline-flex items-center gap-2 text-cyan-400 text-sm font-medium mb-6 hover:text-cyan-300 transition-colors"
      >
        ← Alle Branchen
      </a>
      <div class="flex items-center gap-3 mb-4">
        <span class="text-4xl">{industry.icon}</span>
        <span class="text-cyan-400 font-semibold text-sm uppercase tracking-widest">Branche</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{c.title}</h1>
      <p class="text-slate-300 text-lg max-w-2xl">{c.subtitle}</p>
    </div>
  </div>

  <!-- Herausforderungen -->
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-3">Typische Herausforderungen</h2>
        <p class="text-slate-500">Was Unternehmen in dieser Branche beschäftigt.</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {c.challenges.map((ch) => (
          <div class="bg-slate-50 rounded-2xl p-8 border border-slate-100">
            <div class="text-3xl mb-4">{ch.icon}</div>
            <h3 class="font-bold text-slate-900 mb-2">{ch.title}</h3>
            <p class="text-slate-600 text-sm leading-relaxed">{ch.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Unsere Lösung -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-8 text-center">Unsere UniFi-Lösung</h2>
        <ul class="space-y-4">
          {c.solutions.map((sol) => (
            <li class="flex items-start gap-4 bg-white rounded-xl px-6 py-4 shadow-sm border border-slate-100">
              <svg
                class="h-5 w-5 text-cyan-500 shrink-0 mt-0.5"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-slate-700">{sol}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>

  <!-- Empfohlene Produkte -->
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl md:text-3xl font-bold text-slate-900 text-center mb-12">Empfohlene Lösungen</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {c.products.map((p) => (
          <div class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100 text-center hover:shadow-md transition-shadow">
            <div class="text-4xl mb-4">{p.icon}</div>
            <h3 class="font-bold text-slate-900 mb-3">{p.title}</h3>
            <p class="text-slate-600 text-sm leading-relaxed">{p.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-cyan-500 py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-4">
        Bereit für Ihre UniFi-Lösung?
      </h2>
      <p class="text-slate-800 mb-8 max-w-xl mx-auto">
        Kontaktieren Sie uns für ein unverbindliches Beratungsgespräch. Wir finden die optimale Lösung für Ihre Branche.
      </p>
      <a
        href="/de/kontakt"
        class="inline-flex items-center gap-2 bg-slate-900 hover:bg-slate-700 text-white font-semibold px-8 py-4 rounded-lg transition-colors"
      >
        Jetzt Kontakt aufnehmen
      </a>
    </div>
  </section>
</BaseLayout>
