---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icon.astro';
import { useTranslations } from '../../i18n/utils';
import { industries } from '../../data/industries';

const lang = 'de' as const;
const t = useTranslations(lang);
---

<BaseLayout
  lang={lang}
  title={t('portfolio.title')}
  description="UniFi-Lösungen für 10 Branchen: Gesundheitswesen, Hotellerie, Kanzleien, Büros, Lager & Logistik, Museen, Werkstätten, Salons, Retail und Bildungswesen."
>
  <!-- Page header -->
  <div class="bg-gradient-to-br from-slate-900 to-blue-950 text-white py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-cyan-400 font-semibold text-sm uppercase tracking-widest mb-3">Digital Runners</p>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{t('portfolio.title')}</h1>
      <p class="text-slate-300 text-lg max-w-2xl">{t('portfolio.subtitle')}</p>
    </div>
  </div>

  <!-- Industries grid -->
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <p class="text-slate-600 max-w-2xl mx-auto text-lg">
          Digital Runners liefert massgeschneiderte UniFi-Lösungen für verschiedene Branchen.
          Wählen Sie Ihre Branche und erfahren Sie, wie wir Ihnen helfen können.
        </p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {industries.map((industry) => (
          <a
            href={`/de/branchen/${industry.slug}`}
            class="group bg-white rounded-2xl p-8 shadow-sm border border-slate-100 hover:border-cyan-300 hover:shadow-md transition-all"
          >
            <div class="mb-4"><Icon name={industry.icon} class="h-8 w-8 text-cyan-600" /></div>
            <h2 class="font-bold text-slate-900 text-lg mb-2 group-hover:text-cyan-600 transition-colors">
              {industry.de.name}
            </h2>
            <p class="text-slate-500 text-sm leading-relaxed line-clamp-2">
              {industry.de.subtitle}
            </p>
            <span class="inline-flex items-center gap-1 mt-4 text-cyan-600 text-sm font-medium group-hover:gap-2 transition-all">
              Mehr erfahren
              <Icon name="ArrowRightMD" class="h-4 w-4" />
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-bold text-slate-900 mb-4">Ihre Branche ist nicht dabei?</h2>
      <p class="text-slate-600 mb-8">Kein Problem – wir finden auch für spezielle Anforderungen die passende UniFi-Lösung.</p>
      <a
        href="/de/kontakt"
        class="inline-flex items-center gap-2 bg-cyan-500 hover:bg-cyan-400 text-slate-900 font-semibold px-8 py-4 rounded-lg transition-colors"
      >
        {t('hero.cta')}
      </a>
    </div>
  </section>
</BaseLayout>
