---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icon.astro';
import { useTranslations } from '../../i18n/utils';

const lang = 'de' as const;
const t = useTranslations(lang);

const services = [
  {
    icon: 'Globe',
    title: 'UniFi Network',
    desc: 'Leistungsstarke WLAN-, Switch- und Gateway-Infrastruktur für zuverlässige, skalierbare Netzwerke in jedem Umfeld.',
    details: [
      'UniFi Access Points für maximale WLAN-Abdeckung',
      'Managed Switches für strukturierte Verkabelung',
      'UniFi Cloud Gateways und Dream Machines',
      'Zentrale Verwaltung über UniFi Network Controller',
      'VPN, VLAN und fortschrittliche Netzwerksegmentierung',
    ],
  },
  {
    icon: 'Camera',
    title: 'UniFi Protect',
    desc: 'Professionelle IP-Videoüberwachung mit UniFi Protect – Kameras, NVR und zentrale Verwaltung aus einer Hand.',
    details: [
      'IP-Kameras für Innen- und Aussenanwendungen',
      'UniFi NVR und Cloud Key für lokale Aufzeichnung',
      'Echtzeit-Monitoring und Bewegungserkennung',
      'Einfache Verwaltung über UniFi Protect App',
      'Skalierbar von kleinen Büros bis zu grossen Anlagen',
    ],
  },
  {
    icon: 'Exit',
    title: 'UniFi Access',
    desc: 'Professionelle Zutrittskontrolle direkt im UniFi-Ökosystem – NFC-Karten, mobiles Entsperren und Intercom aus einer Hand.',
    details: [
      'NFC-Karten, Schlüsselanhänger und Mobile Unlock (Touch Pass) per Smartphone oder Smartwatch',
      'Intercom-Reader mit Kamera und Zwei-Wege-Audio',
      'Zentrale Verwaltung von Zutrittsrechten und Zeitplänen',
      'Nahtlose Integration mit UniFi Protect (Kameraansicht bei Türklingel)',
      'Skalierbar: von einer Tür bis zu Mehrgeschossgebäuden mit vielen Zugangspunkten',
    ],
  },
  {
    icon: 'Phone',
    title: 'UniFi Talk',
    desc: 'Lokale VoIP-Telefonanlage ohne Cloud-Abhängigkeit – kompatibel mit Schweizer SIP-Anbietern wie Sunrise, Salt und Swisscom.',
    details: [
      'Vollständige VoIP-Telefonanlage ohne monatliche Cloud-Gebühren',
      'Kompatibel mit Schweizer SIP-Anbietern (Sunrise Business, Salt, Swisscom etc.)',
      'Smart Attendant, Rufweiterleitung, Voicemail und Anrufaufzeichnung',
      'Gesprächsprotokolle und Statistiken für vollständige Transparenz',
      'Integration mit UniFi Protect – Kameraansicht am Telefon bei Türklingel',
    ],
  },
  {
    icon: 'Data',
    title: 'UniFi Drive',
    desc: 'Netzwerkgebundener Speicher direkt im UniFi-Ökosystem – sicher, lokal und DSGVO-konform.',
    details: [
      'Netzwerkgebundener Speicher (NAS) direkt im UniFi-Ökosystem verwaltet',
      'Lokale Dateiablage und Backups ohne Cloud-Abhängigkeit (DSGVO-konform)',
      'Erweiterter Speicher für UniFi Protect Kameraaufzeichnungen',
      'Unterstützt Standard-NAS-Protokolle (SMB, NFS) für nahtlose Integration',
      'Verfügbar als kompaktes Desktop-Modell (UNAS Pro mit 7 Bays)',
    ],
  },
  {
    icon: 'Settings',
    title: 'Installation & Beratung',
    desc: 'Wir analysieren Ihre Anforderungen, planen die optimale Lösung und installieren Ihre UniFi-Infrastruktur fachgerecht.',
    details: [
      'Standortanalyse und Bedarfsermittlung',
      'Massgeschneiderte Netzwerkplanung',
      'Professionelle Montage und Verkabelung',
      'Konfiguration und Inbetriebnahme',
      'Einweisung und Dokumentation',
    ],
  },
  {
    icon: 'Help',
    title: 'Support & Wartung',
    desc: 'Kontinuierlicher Support, proaktive Wartung und schnelle Hilfe bei Problemen – damit Ihr Netzwerk immer läuft.',
    details: [
      'Firmware-Updates und Sicherheits-Patches',
      'Proaktives Monitoring Ihrer Infrastruktur',
      'Schnelle Fehlerbehebung bei Problemen',
      'Regelmässige Leistungsüberprüfungen',
      'Telefonischer und Remote-Support',
    ],
  },
];
---

<BaseLayout
  lang={lang}
  title={t('services.title')}
  description="Unsere UniFi-Leistungen: UniFi Network, UniFi Protect, Installation, Beratung, Support und Wartung."
>
  <div class="bg-gradient-to-br from-slate-900 to-blue-950 text-white py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-cyan-400 font-semibold text-sm uppercase tracking-widest mb-3">Digital Runners</p>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{t('services.title')}</h1>
      <p class="text-slate-300 text-lg max-w-2xl">{t('services.subtitle')}</p>
    </div>
  </div>

  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 space-y-16">
      {services.map((service, i) => (
        <div class:list={['grid grid-cols-1 md:grid-cols-2 gap-10 items-center']}>
          <div class:list={[i % 2 !== 0 ? 'md:order-2' : '']}>
            <div class="bg-cyan-50 rounded-lg p-3 w-fit mb-4"><Icon name={service.icon} class="h-8 w-8 text-cyan-600" /></div>
            <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-4">{service.title}</h2>
            <p class="text-slate-600 leading-relaxed mb-6">{service.desc}</p>
            <a href="/de/kontakt" class="inline-flex items-center gap-2 text-cyan-600 font-semibold hover:text-cyan-700 transition-colors">
              Anfrage stellen →
            </a>
          </div>
          <div class:list={['bg-slate-50 rounded-2xl p-8 border border-slate-100', i % 2 !== 0 ? 'md:order-1' : '']}>
            <h3 class="font-semibold text-slate-800 mb-4">Was wir liefern:</h3>
            <ul class="space-y-3">
              {service.details.map(item => (
                <li class="flex items-start gap-3 text-sm text-slate-700">
                  <Icon name="CheckBig" class="h-5 w-5 text-cyan-500 shrink-0 mt-0.5" />
                  {item}
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </section>

  <section class="bg-slate-900 text-white py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Interesse? Wir beraten Sie gerne.</h2>
      <p class="text-slate-400 mb-8">Kontaktieren Sie uns für ein unverbindliches Gespräch.</p>
      <a href="/de/kontakt" class="inline-flex items-center gap-2 bg-cyan-500 hover:bg-cyan-400 text-slate-900 font-semibold px-8 py-4 rounded-lg transition-colors">
        Jetzt Kontakt aufnehmen
      </a>
    </div>
  </section>
</BaseLayout>
