---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import Icon from '../../components/Icon.astro';
import { useTranslations } from '../../i18n/utils';
import { industries } from '../../data/industries';

const lang = 'de' as const;
const t = useTranslations(lang);

const testimonials = [
  {
    quote: 'Digital Runners hat uns eine erstklassige UniFi-Lösung erstellt. Der Support und Service waren top.',
    author: 'M. Steiner',
    role: 'Geschäftsführer',
  },
  {
    quote: 'Die Wahl von Digital Runners war die beste Entscheidung, die wir getroffen haben. Ihre Expertise ist unübertroffen und sie haben die perfekte Lösung für uns gefunden.',
    author: 'Johannes H.',
    role: 'IT Manager',
  },
];
---

<BaseLayout
  lang={lang}
  title="Startseite"
  description="Digital Runners – Ihr Schweizer UniFi Partner für professionelle Netzwerklösungen, UniFi Network und UniFi Protect."
>
  <Hero lang={lang} />

  <!-- Services overview -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-14">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">{t('services.title')}</h2>
        <p class="text-slate-600 max-w-2xl mx-auto">{t('services.subtitle')}</p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {[
          { icon: 'Globe',    title: t('services.network.title'), desc: t('services.network.desc') },
          { icon: 'Camera',   title: t('services.protect.title'), desc: t('services.protect.desc') },
          { icon: 'Exit',     title: t('services.access.title'),  desc: t('services.access.desc') },
          { icon: 'Phone',    title: t('services.talk.title'),    desc: t('services.talk.desc') },
          { icon: 'Data',     title: t('services.drive.title'),   desc: t('services.drive.desc') },
          { icon: 'Settings', title: t('services.install.title'), desc: t('services.install.desc') },
          { icon: 'Help',     title: t('services.support.title'), desc: t('services.support.desc') },
        ].map(service => (
          <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow border border-slate-100">
            <div class="bg-cyan-50 rounded-lg p-3 w-fit mb-4">
              <Icon name={service.icon} class="h-6 w-6 text-cyan-600" />
            </div>
            <h3 class="font-semibold text-slate-900 mb-2">{service.title}</h3>
            <p class="text-sm text-slate-600 leading-relaxed">{service.desc}</p>
          </div>
        ))}
      </div>
      <div class="text-center mt-10">
        <a href="/de/leistungen" class="inline-flex items-center gap-2 text-cyan-600 font-semibold hover:text-cyan-700 transition-colors">
          Alle Leistungen ansehen
          <Icon name="ArrowRightMD" class="h-4 w-4" />
        </a>
      </div>
    </div>
  </section>

  <!-- Industries -->
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">{t('portfolio.title')}</h2>
        <p class="text-slate-600 max-w-2xl mx-auto">{t('portfolio.subtitle')}</p>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-5 gap-4">
        {industries.map(ind => (
          <a
            href={`/de/branchen/${ind.slug}`}
            class="flex flex-col items-center gap-3 bg-slate-50 rounded-xl p-5 border border-slate-100 hover:border-cyan-300 hover:bg-white transition-all text-center group"
          >
            <span class="text-3xl">{ind.icon}</span>
            <span class="text-sm font-medium text-slate-700 group-hover:text-cyan-600 transition-colors">{ind.de.name}</span>
          </a>
        ))}
      </div>
      <div class="text-center mt-10">
        <a href="/de/referenzen" class="inline-flex items-center gap-2 text-cyan-600 font-semibold hover:text-cyan-700 transition-colors">
          Alle Branchen ansehen →
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20 bg-slate-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-slate-900 text-center mb-12">Was unsere Kunden sagen</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {testimonials.map(item => (
          <div class="bg-white rounded-xl p-8 shadow-sm border border-slate-100">
            <Icon name="DoubleQuotesL" class="h-8 w-8 text-cyan-400 mb-4" />
            <p class="text-slate-700 leading-relaxed mb-6 italic">„{item.quote}"</p>
            <div>
              <p class="font-semibold text-slate-900">{item.author}</p>
              <p class="text-sm text-slate-500">{item.role}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-cyan-500 py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-4">
        Bereit für Ihr professionelles UniFi-Netzwerk?
      </h2>
      <p class="text-slate-800 mb-8 max-w-xl mx-auto">
        Kontaktieren Sie uns für ein unverbindliches Gespräch. Wir finden die optimale Lösung für Sie.
      </p>
      <a href="/de/kontakt" class="inline-flex items-center gap-2 bg-slate-900 hover:bg-slate-700 text-white font-semibold px-8 py-4 rounded-lg transition-colors">
        Jetzt Kontakt aufnehmen
      </a>
    </div>
  </section>
</BaseLayout>
